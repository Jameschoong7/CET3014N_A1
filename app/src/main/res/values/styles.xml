<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/background_color</item>

        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <style name="PageTitleTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="RoundedEditText">
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="RoundedButton">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RoundedButtonSmall">
        <item name="android:background">@drawable/rounded_button_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="WarningButton">
        <item name="android:background">@drawable/warning_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>